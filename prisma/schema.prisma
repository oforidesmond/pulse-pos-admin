datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl          = env("DIRECT_DATABASE_URL")
  shadowDatabaseUrl  = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  ATTENDANT
}

enum SyncStatus {
  PENDING
  SYNCED
  FAILED
}

enum PaymentMethod {
  CASH
  MOBILE_MONEY
  CARD
  TRANSFER
}

enum StockAdjustmentType {
  INITIAL_STOCK
  SUPPLIER_ADD
  DAMAGE_EXPIRED_REMOVE
  BULK_TO_SINGLES
  SINGLES_TO_BULK
  CORRECT_ENTRY_ERROR
  SALE
  SALE_REVERSAL
}

model User {
  id        String   @id @default(cuid())
  fullName  String?
  email     String?
  username  String?  @unique
  password  String?
  needsPasswordChange Boolean @default(false)
  role      UserRole @default(ATTENDANT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Sales Sale[]
  stockAdjustments StockAdjustment[]
}

model Product {
  id             String     @id @default(cuid())
  name           String
  sku            String?     @unique
  barcode        String?    @unique
  description    String?
  cost           Decimal    @db.Decimal(10, 2)
  price          Decimal    @db.Decimal(10, 2)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  stock     Stock?
  saleItems SaleItem[]
  stockAdjustments StockAdjustment[]
}

model Stock {
  id            String   @id @default(cuid())
  productId     String
  quantity      Decimal  @db.Decimal(10, 2) @default(0)
  lastUpdatedAt DateTime @updatedAt
  createdAt     DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId])
}

model Sale {
  id            String        @id @default(cuid())
  receiptNumber String        @unique
  userId        String
  subtotal      Decimal       @db.Decimal(10, 2)
  discount      Decimal?      @db.Decimal(10, 2)
  totalAmount   Decimal       @db.Decimal(10, 2)
  paymentMethod PaymentMethod
  createdAt     DateTime      @default(now())
  
  attendant User      @relation(fields: [userId], references: [id])
  items     SaleItem[]
}

model SaleItem {
  id        String  @id @default(cuid())
  saleId    String
  productId String
  quantity  Decimal @db.Decimal(10, 2)
  price     Decimal @db.Decimal(10, 2)
  total     Decimal @db.Decimal(10, 2)

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@index([productId])
}

model StockAdjustment {
  id             String              @id @default(cuid())
  productId      String
  type           StockAdjustmentType
  quantityBefore Decimal             @db.Decimal(10, 2)
  quantityAfter  Decimal             @db.Decimal(10, 2)
  quantityChange Decimal             @db.Decimal(10, 2)
  reason         String?
  userId         String?
  createdAt      DateTime            @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([productId, createdAt])
  @@index([userId])
}

model SyncLog {
  id           String     @id @default(cuid())
  tableName    String
  recordId     String
  status       SyncStatus @default(PENDING)
  errorMessage String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
